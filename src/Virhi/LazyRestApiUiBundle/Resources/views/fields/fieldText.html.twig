{% if field.key is defined and field.key == true %}
    <div class="form-group">
        <label class="control-label" for="{{ field.name }}">{{ field.label }} :</label>
        <input type="text"  {% if created == true %} disabled="disabled" {% else %} readonly {% endif %} name="{{ field.name }}" class="form-control" id="{{ field.name }}" placeholder="{{ field.value }}" value="{{ field.value }}">
    </div>
{% else %}
    <div class="form-group">
        <label class="control-label" for="{{ field.name }}">{{ field.label }} :</label>
        <input class="form-control" type="text" name="{{ field.name }}" class="form-control" id="{{ field.name }}" placeholder="{{ field.value }}" value="{{ field.value }}">
    </div>
{% endif %}