{% if mode is not defined or mode is empty %}
    {% set mode = 'view' %}
{% endif %}

<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            {% if mode == 'view' %}
                <fieldset disabled>
            {% endif %}
                {% for field in entity.fields %}
                    {% include  "VirhiUiRestApiDoctrineBundle:fields:field.html.twig"%}
                {% endfor %}
            {% if mode == 'view' %}
                </fieldset>
            {% endif %}
            <div class="form-group text-right">
                <div class="col-sm-8">
                </div>
                <div class="col-sm-4 ">
                    {% if mode == 'view' %}
                        {% include  "VirhiUiRestApiDoctrineBundle:fields:block_button.html.twig"%}
                    {% elseif mode == 'edit' %}
                        {% include  "VirhiUiRestApiDoctrineBundle:fields:edit_block_button.html.twig"%}
                    {% endif %}
                </div>
            </div>
        </form>
    </div>
</div>