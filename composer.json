{
    "name": "virhi/lazy-rest-api-ui-bundle",
    "description": "generate a UI on top of Rest Hal APi",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Rhino",
            "email": "vincent.rhino@gmail.com",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Virhi\\LazyRestApiUiBundle\\": "src/Virhi/LazyRestApiUiBundle/"
        }
    },

    "autoload-dev": {
        "psr-4": { "Virhi\\LazyRestApiUiBundle\\Tests\\": "Tests/" }
    },

    "require": {
        "virhi/RestHalBundle": "@dev",
        "virhi/component": "@dev",
        "virhi/admin-bundle": "0.1.*"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },

    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/virhi/RestHalBundle.git"
        },
        {
            "type": "git",
            "url": "https://github.com/virhi/Component.git"
        }
    ]
}
